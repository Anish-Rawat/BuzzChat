<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonalMessagingFragment"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personal_msg_screen_top_view"
        android:background="#3B7FBC"
        android:layout_alignParentTop="true"
        android:padding="10dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@+id/personal_msg_screen_back_btn"
            android:src="@drawable/back_btn"
            android:layout_centerVertical="true"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:id="@+id/personal_msg_screen_contact_profile"
            android:src="@drawable/my_profile"
            android:layout_toRightOf="@+id/personal_msg_screen_back_btn"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/personal_msg_screen_contact_profile"
            android:layout_marginStart="10dp"
            android:orientation="vertical"
            android:layout_centerInParent="true">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/personal_msg_screen_contact_name"
                android:text="UserName"
                android:layout_centerVertical="true"
                android:textStyle="bold|italic"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/personal_msg_screen_contact_state"
                android:layout_below="@+id/personal_msg_screen_contact_name"
                android:text=""
                android:textStyle="italic"
                android:textColor="@color/white"/>

        </LinearLayout>

    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personal_msg_screen_recycler_view"
        tools:listitem="@layout/personal_messaging_item_card"
        android:layout_below="@+id/personal_msg_screen_top_view"
        android:layout_above="@+id/personal_msg_screen_bottom_view"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/personal_msg_screen_bottom_view"
        android:layout_alignParentBottom="true"
        android:background="#3B7FBC">

        <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/personal_msg_screen_edit_text"
            android:layout_weight="1"
            android:hint="message"
            android:textSize="18sp"
            android:layout_alignParentStart="true"
            android:layout_marginStart="10dp"
            android:layout_centerVertical="true"
            android:layout_toLeftOf="@+id/personal_msg_screen_send_btn"/>

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:id="@id/personal_msg_screen_send_btn"
            android:src="@drawable/send_btn"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_centerVertical="true"/>

    </RelativeLayout>

    <ProgressBar
        android:id="@+id/personal_msg_screen_progress_bar"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone" />

</RelativeLayout>