<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="10dp">

    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/message_receiver_profile"
        android:src="@drawable/my_profile"
        android:visibility="gone"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_receiver_layout"
        android:layout_toRightOf="@+id/message_receiver_profile"
        android:elevation="5dp"
        android:background="@drawable/receiver_msg_bg"
        android:layout_centerInParent="true"
        android:layout_marginStart="10dp"
        android:visibility="gone">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_receiver_msg_text"
            android:hint="Hello Guys , Whatsapp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_receiver_msg_time"
            android:text="10:40 AM"
            android:layout_below="@+id/message_receiver_msg_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:id="@+id/message_sender_profile"
        android:src="@drawable/my_profile"
        android:layout_alignParentEnd="true"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/message_sender_layout"
        android:layout_toLeftOf="@+id/message_sender_profile"
        android:elevation="5dp"
        android:background="@drawable/sender_msg_bg"
        android:layout_centerInParent="true"
        android:layout_marginEnd="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_sender_msg_text"
            android:hint="Hello Guys , Whatsapp"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5dp"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/message_sender_msg_time"
            android:text="10:40 AM"
            android:layout_below="@+id/message_sender_msg_text"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="5dp"/>

    </RelativeLayout>

</RelativeLayout>