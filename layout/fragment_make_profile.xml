<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".MakeProfileFragment"
    android:clickable="true"
    android:focusable="true"
    android:background="@color/white">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_card_view"
                app:cardCornerRadius="0dp"
                app:cardBackgroundColor="#3B7FBC">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="10dp">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:id="@+id/make_profile_back_btn"
                        android:src="@drawable/back_btn"
                        android:layout_alignParentStart="true"/>

                    <!--                    <ImageView-->
                    <!--                        android:layout_width="30dp"-->
                    <!--                        android:layout_height="30dp"-->
                    <!--                        android:id="@+id/edit_profile_edit_btn"-->
                    <!--                        android:src="@drawable/edit_btn"-->
                    <!--                        android:layout_alignParentEnd="true"/>-->

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/make_profile_textview"
                        android:text="Profile"
                        android:textColor="@color/white"
                        android:textSize="24sp"
                        android:textStyle="bold|italic"
                        android:layout_marginBottom="10dp"
                        android:layout_centerHorizontal="true"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="125dp"
                        android:layout_height="125dp"
                        android:id="@+id/make_profile_image"
                        android:src="@drawable/my_profile"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/make_profile_textview"
                        app:civ_border_color="#3A82C3"
                        app:civ_border_width="1dp"
                        app:civ_border_overlay="true"
                        android:elevation="5dp"/>

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:id="@+id/make_profile_btn"
                        android:layout_marginTop="145dp"
                        android:layout_centerHorizontal="true"
                        android:src="@drawable/camera"
                        android:elevation="5dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/make_profile_name"
                        android:layout_below="@+id/make_profile_image"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:hint="username"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="20dp"
                        android:layout_marginHorizontal="50dp"/>

                    <EditText
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/make_profile_about"
                        android:layout_below="@+id/make_profile_name"
                        android:layout_centerHorizontal="true"
                        android:textAlignment="center"
                        android:hint="About :- e.g hey i'm using buzzchat"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:layout_marginTop="5dp"
                        android:layout_marginHorizontal="50dp"/>

                    <!--                    <LinearLayout-->
                    <!--                        android:layout_width="match_parent"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_below="@+id/edit_profile_about"-->
                    <!--                        android:layout_marginTop="10dp"-->
                    <!--                        android:orientation="horizontal"-->
                    <!--                        android:weightSum="3"-->
                    <!--                        android:gravity="center"-->
                    <!--                        android:layout_centerHorizontal="true"-->
                    <!--                        android:layout_marginHorizontal="30dp">-->

                    <!--                        <de.hdodenhof.circleimageview.CircleImageView-->
                    <!--                            android:layout_width="35dp"-->
                    <!--                            android:layout_height="35dp"-->
                    <!--                            android:id="@+id/edit_profile_msg_btn"-->
                    <!--                            android:src="@drawable/call_btn"-->
                    <!--                            android:layout_gravity="center"-->
                    <!--                            android:layout_weight="1"/>-->

                    <!--                        <de.hdodenhof.circleimageview.CircleImageView-->
                    <!--                            android:layout_width="35dp"-->
                    <!--                            android:layout_height="35dp"-->
                    <!--                            android:id="@+id/edit_profile_mail_btn"-->
                    <!--                            android:src="@drawable/message_btn"-->
                    <!--                            android:layout_gravity="center"-->
                    <!--                            android:layout_weight="1"/>-->

                    <!--                        <de.hdodenhof.circleimageview.CircleImageView-->
                    <!--                            android:layout_width="35dp"-->
                    <!--                            android:layout_height="35dp"-->
                    <!--                            android:id="@+id/edit_profile_call_btn"-->
                    <!--                            android:src="@drawable/mail_btn"-->
                    <!--                            android:layout_gravity="center"-->
                    <!--                            android:layout_weight="1"/>-->

                    <!--                    </LinearLayout>-->

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_nickname_text_view"
                android:text="Nickname"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:layout_marginTop="10dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/make_profile_card_view" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_nickname"
                android:layout_below="@+id/make_profile_nickname_text_view"
                android:hint="e.g anu,sonu etc"
                android:layout_marginStart="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#A8A4A4"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_DOB_text_view"
                android:text="Date of Birth"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/make_profile_nickname" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_DOB"
                android:layout_below="@+id/make_profile_DOB_text_view"
                android:hint="e.g   23/06/2000"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#A8A4A4"
                android:layout_marginEnd="10dp"
                android:clickable="false"
                android:focusable="false"/>

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/calender"
                android:id="@+id/make_profile_calender_btn"
                android:layout_below="@+id/make_profile_DOB_text_view"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_gender_text_view"
                android:text="Gender"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/make_profile_DOB" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_gender"
                android:layout_below="@+id/make_profile_gender_text_view"
                android:hint="e.g   male"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#A8A4A4"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_country_text_view"
                android:text="Country"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/make_profile_gender" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_country"
                android:layout_below="@+id/make_profile_country_text_view"
                android:hint="e.g   india"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#A8A4A4"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_contact_number_text_view"
                android:text="Contact Number"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/make_profile_country" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_contact_number"
                android:layout_below="@+id/make_profile_contact_number_text_view"
                android:hint="e.g   9872014000"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#A8A4A4"
                android:layout_marginEnd="10dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_address_text_view"
                android:text="Address"
                android:textStyle="bold|italic"
                android:textSize="18sp"
                android:layout_marginTop="20dp"
                android:layout_marginStart="10dp"
                android:layout_below="@+id/make_profile_contact_number" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_address"
                android:layout_below="@+id/make_profile_address_text_view"
                android:hint="e.g   2003/1 srctor 40c CHD"
                android:layout_marginStart="10dp"
                android:layout_marginTop="5dp"
                android:textColor="#A8A4A4"
                android:layout_marginEnd="10dp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/make_profile_save_btn"
                android:text="Save"
                android:background="@drawable/button_shape"
                android:layout_below="@+id/make_profile_address"
                android:layout_marginTop="20dp"
                android:layout_centerHorizontal="true"
                android:layout_marginBottom="20dp"/>

        </RelativeLayout>

    </ScrollView>

</RelativeLayout>