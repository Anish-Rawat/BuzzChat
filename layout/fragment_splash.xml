<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".SplashFragment"
    android:background="#3B7FBC"
    android:clickable="true"
    android:focusable="true">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/splash_screen_app_logo"
        android:src="@drawable/app_logo"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/splash_screen_app_name"
        app:civ_border_width="1dp"
        app:civ_border_color="#3A82C3"
        app:civ_border_overlay="true"
        android:elevation="5dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash_screen_app_name"
        android:text="BuzzChat"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:textSize="32sp"
        android:layout_centerInParent="true"
        android:layout_marginTop="20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash_screen_pickup_line"
        android:text="Chat with your favourite person and A cup of tea...."
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_marginHorizontal="50dp"
        android:layout_below="@+id/splash_screen_app_name"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App Developed By :- "
        android:textColor="@color/white"
        android:textStyle="italic"
        android:textAlignment="center"
        android:textSize="16sp"
        android:layout_centerHorizontal="true"
        android:padding="10dp"
        android:layout_above="@+id/splash_screen_developer_name" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/splash_screen_developer_name"
        android:text="Anish Rawat"
        android:textColor="@color/white"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:textSize="18sp"
        android:padding="10dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"/>

</RelativeLayout>